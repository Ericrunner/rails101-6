<div class="pull-right">
    <%= link_to("New Group",new_group_path, class: "btn btn-default")%>
</div>
<table class="table">
   <thead>
     <tr>
       <th>#</th>
       <th>Title</th>
       <th>Description</th>
       <th>Creator</th>
     </tr>
   </thead>
   <tbody>
     <% @groups.each do |group| %>
       <tr>
         <td>#</td>
         <td><%= link_to(group.title,group_path(group))%></td>
         <td><%= group.description%></td>
         <td><%= group.user.email%></td>
         <td>
         <% if current_user && current_user==group.user%>
           <%= link_to("Edit",edit_group_path(group),class: "btn btn-default")%>
           <%= link_to("Delete",group_path(group), method: :delete,class: "btn btn-default", data: { confirm: "Are you sure? "}) %>

         <% end %>
         </td>
       </tr>
     <% end %>
   </tbody>
</table>
