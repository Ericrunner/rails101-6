<h2>我参加的讨论版</h2>
<table class="table">
   <thead>
     <tr>
       <th>#</th>
       <th>Group.title</th>
       <th>Group.description</th>
       <th>Post count</th>
       <th>Last Update</th>
     </tr>
   </thead>
   <tbody>
     <% @groups.each do |group|%>
        <tr>
          <td>#</td>
          <td><%= link_to(group.title,group_path(group)) %></td>
          <td><%= render_group_description(group)%></td>
          <td><%= group.posts.count%></td>
          <td><%= group.updated_at%></td>
        </tr>
     <% end %>
   </tbody>
</table>
